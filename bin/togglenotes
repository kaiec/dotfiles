#!/bin/bash
pgrep -f vim_notes
RUNNING=$?
if [ $RUNNING -eq 0 ]
then
	i3-msg \[instance=\"vim_notes\"\] scratchpad show
	exit 0
else
	if [[ -f ~/.cache/wal/sequences ]]; then
		echo "WAL support"
		colors="(cat ~/.cache/wal/sequences &);"
	else
		echo "No WAL"
		colors=""
	fi
	kitty --name vim_notes bash -c "$colors nvim ~/Dropbox/Notizen/index.md" &
	sleep 1
	i3-msg \[instance=\"vim_notes\"\] scratchpad show 
fi
