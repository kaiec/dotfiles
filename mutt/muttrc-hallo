source ~/dotfiles/mutt/config

# Automatically log in to this mailbox at startup
set spoolfile="~/Maildir/hallo/Inbox"
# Define the = shortcut, and the entry point for the folder browser (c?)
set folder="~/Maildir/hallo"

mailboxes +Inbox 

set record="=Inbox"
set postponed="=Drafts"
# set mbox="=archive"
set trash="=Trash"

set from="hallo@kaiec.de"
# set signature="~/dotfiles/hdm-signature.sig"

set sendmail="/home/kai/dotfiles/mutt/checkmail.py msmtpq -a hallo"
set sendmail_wait = -1

